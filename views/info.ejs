        <p><strong>Plot:</strong> <%= movies.Plot %></p>
        <p><strong>Actors:</strong> <%= movies.Actors %></p>
        <p><strong>Director:</strong> <%= movies.Director %></p>
        <p><strong>Year:</strong> <%= movies.Year %></p>
        <p><strong>Genre:</strong> <%= movies.Genre %></p>
        <p><strong>Rated:</strong> <%= movies.Rated %></p>
        <p><strong>Released:</strong> <%= movies.Released %></p>
        <p><strong>Runtime:</strong> <%= movies.Runtime %></p>
        <a class="waves-effect waves-light btn">Add To Own</a> <a class="waves-effect waves-light btn">Add To Wishlist</a>
      </div>
</div>

<% if(comments) { %>
<% comments.forEach(function(comment) { %>
     <p class="well"><strong><%= comment.name %></strong> <%= comment.content %></p>
<% }); %>
<% } %>
<form method="post" action='/info/<%= movies.imdbID %>/comment' class="well">
  <label>Name</label>
    <input type="text" name="name">
  <label>Comment</label>
    <textarea type="text" name="content"></textarea>
  <button type="submit">Submit Comment</button>
</form>

